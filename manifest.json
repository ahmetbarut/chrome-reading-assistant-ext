{
    "manifest_version": 3,
    "name": "Okuma Yardımcısı",
    "version": "1.0",
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "action": {
        "default_title": "Okuma Yardımcısı"
    }
}